.container {
  background: #f4f4f4;
  padding-bottom: 100rpx;
}

swiper {
  width: 750rpx;
  height: 750rpx;
}

swiper image {
  width: 100%;
  height: 100%;
}

.main {
  overflow: hidden;
  padding: 0 10rpx;
  background: white;
}

.price {
  font-size: 18px;
  color: #eb4450;
  margin-top: 20rpx;
}

.text {
  display: flex;
  justify-content: space-between;
  margin: 20rpx 0;
}

.text .introduce {
  flex: 8;
  font-size: 14px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.text .collect {
  flex: 3;
  width: 142rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #999;
  font-size: 14px;
  border-left: 1px solid #ddd;
  margin-left: 79rpx;
}

.freight {
  margin-bottom: 20rpx;
  font-size: 12px;
  color: #999;
}

.discount {
  font-size: 12px;
  background: white;
  margin: 20rpx 0;
  padding: 0 10rpx;
}

.discount>text {
  color: #eb4450;
  margin-left: 2em;
}

.bottom_nav {
  height: 100rpx;
  width: 750rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: center;
  background: white;
}

.bottom_nav .left {
  flex: 4;
  display: flex;
  justify-content: space-around;
  font-size: 12px;
  color: #999999;
}

.bottom_nav .left .contact {
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align: center;
}
.contact_btn{
  height: 98rpx;
  width: 161rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: center;
  background: white;
  z-index: 99;
  opacity: 0;
}


.bottom_nav .left .cart {
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align: center;
}

.bottom_nav .right {
  flex: 5;
  display: flex;
  justify-content: center;
}

.bottom_nav .right .add_to_cart {
  width: 100%;
  color: white;
  background: #f4b73f;
  text-align: center;
  line-height: 100rpx;
}

.bottom_nav .right .buy {
  width: 100%;
  color: white;
  background: #eb4450;
  text-align: center;
  line-height: 100rpx;
}
