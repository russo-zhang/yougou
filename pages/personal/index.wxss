.box{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  bottom:0;
  background:url("http://game.gtimg.cn/images/yxzj/img201606/skin/hero-info/136/136-bigskin-3.jpg") no-repeat;
  
}
.container{
  display: flex;
  flex-wrap:wrap;
  width: 750rpx;
  margin-top:150rpx;
}
.container>view{
  width: 250rpx;
  height: 250rpx;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
  border: 5px solid white; 
}

image{
  width: 250rpx;
  height: 250rpx;
}

.forever::after{
  content: "永久";
  width: 150rpx;
  height: 40rpx;
  position: absolute;
  top: 0rpx;
  right: -54rpx;
  color: white;
  font-size: 14px;
  text-align: center;
  line-height: 50rpx;
  transform: rotate(45deg);
  background: #d6692c;
  z-index: 99;
}
.active {
     border: 5px solid #7a6c32 !important;
 }