/* 搜索框 */

.search {
  height: 100rpx;
  width: 100%;
  padding: 20rpx 16rpx;
  background: #eee;
  position: fixed;
  box-sizing: border-box;
  z-index: 99;
}

.search .content {
  height: 60rpx;
  background: white;
  border-radius: 3px;
  display: flex;
  justify-content: start;
  align-items: center;
  font-size: 12px;
  color: #666;
}

.search .content icon {
  margin: 0 16rpx;
  padding-top: 2px;
}

/* tab栏 */

.tab {
  height: 100rpx;
  padding-top: 100rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  border-bottom: 1px solid #ddd;
}

.tab>.active {
  color: #eb4450;
}

.tab .price {
  display: flex;
}

.tab .price .arrow {
  color: #cfcfcf;
}

.tab .price .arrow .down {
  margin-top: -16rpx;
  color: #666;
}

/* 商品 */

.goods {
  display: flex;
  padding: 35rpx 20rpx;
  border-bottom: 1px solid #ddd;
}

.goods .left image {
  width: 200rpx;
  height: 200rpx;
}

.goods .right {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left:26rpx;
}

.goods .right .text {
  font-size:14px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.goods .right .price{
  font-size:12px;
color: #eb4450;
}
.goods .right .price>text{
font-size:16px;
}

.bottom{
  height: 100rpx;
  line-height: 100rpx;
  text-align: center
  
}
@keyframes ani_loading {
      0%{
        transform: rotate(0deg)
      }
      25%{
        transform: rotate(90deg)
      }
      50%{
        transform: rotate(180deg)
      }
      75%{
        transform: rotate(270deg)
      }
      100%{
        transform: rotate(360deg)
      }
    }
.bottom .loading{
  display: inline-block;
  animation-name: ani_loading;
  animation-duration: 1s;
  animation-iteration-count: infinite;
  animation-timing-function:linear;
}