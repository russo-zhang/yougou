/* 搜索框 */

.search {
  height: 100rpx;
  width: 100%;
  padding: 20rpx 16rpx;
  background: #ff2d4a;
  position: fixed;
  box-sizing: border-box;
  z-index: 99;
}

.search .content {
  height: 60rpx;
  background: white;
  border-radius: 4px;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 12px;
  color: #666;
}

.search .content icon {
  margin-right: 16rpx;
  padding-top: 2px;
}